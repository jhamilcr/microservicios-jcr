<%- include('../partials/header') %>

<div class="card">
  <h2>Nueva tarea</h2>
  <form method="POST" action="/tasks">
    <label for="title">Título</label>
    <input id="title" name="title" type="text" value="<%= (values && values.title) || '' %>" required>

    <label for="description" style="margin-top:.5rem;">Descripción</label>
    <textarea id="description" name="description" rows="4"><%= (values && values.description) || '' %></textarea>

    <label for="status" style="margin-top:.5rem;">Estado</label>
    <select id="status" name="status">
      <option value="pendiente" <%= !values || values.status==='pendiente' ? 'selected' : '' %>>pendiente</option>
      <option value="en_progreso" <%= values && values.status==='en_progreso' ? 'selected' : '' %>>en_progreso</option>
      <option value="completado" <%= values && values.status==='completado' ? 'selected' : '' %>>completado</option>
    </select>

    <% if (error) { %><div class="error"><%= error %></div><% } %>

    <div style="margin-top:1rem;" class="actions">
      <button type="submit">Guardar</button>
      <a class="button" href="/">Cancelar</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
