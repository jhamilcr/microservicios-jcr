<%- include('layout', { }) %>
<div class="card">
  <form method="POST" action="/calcular">
    <div class="row">
      <div>
        <label for="a">Valor de a</label>
        <input
          id="a"
          name="a"
          type="number"
          step="any"
          value="<%= a %>"
          required
        />
      </div>
      <div>
        <label for="b">Valor de b</label>
        <input
          id="b"
          name="b"
          type="number"
          step="any"
          value="<%= b %>"
          required
        />
      </div>
    </div>

    <fieldset style="margin-top: 1rem">
      <legend>Operaci√≥n</legend>
      <label
        ><input type="radio" name="op" value="sum" <%= op==='sum'?'checked':''
        %>> Sumar</label
      >
      <label
        ><input type="radio" name="op" value="sub" <%= op==='sub'?'checked':''
        %>> Restar</label
      >
      <label
        ><input type="radio" name="op" value="mul" <%= op==='mul'?'checked':''
        %>> Multiplicar</label
      >
      <label
        ><input type="radio" name="op" value="div" <%= op==='div'?'checked':''
        %>> Dividir</label
      >
    </fieldset>

    <% if (error) { %>
    <div class="error"><%= error %></div>
    <% } %>

    <button type="submit" style="margin-top: 1rem">Calcular</button>
  </form>
</div>
